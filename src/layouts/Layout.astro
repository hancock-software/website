---
import Sidebar from "../components/shared/Sidebar.astro";
import Hero from "../components/shared/Hero.astro";
import Footer from "../components/shared/Footer.astro";

import site from "../data/site.yml";

import "lineicons/dist/lineicons.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{site.title}</title>
		<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
	</head>
	<body>
		<aside class="nav">
			<Sidebar />
		</aside>

		<div class="container">
			<aside class="hero-sidebar" data-aos="fade">
				<Hero />
			</aside>

			<main>
				<slot />
			</main>
		</div>

		<footer>
			<Footer
				company={site.company}
				companyNumber={site.companyNumber}
				vatNumber={site.vatNumber}
				location={site.location}
				email={site.email}
				legal={site.legal}
				socials={site.socials}
				disclaimer={site.disclaimer}
			/>
		</footer>

		<script>
			import AOS from "aos";
			AOS.init({
				duration: 600,
				easing: "ease-out",
				once: true,
				offset: 20,
				delay: 0,
			});
		</script>
	</body>
</html>

<style>
	* {
		box-sizing: border-box;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;

		background: #151312;
		color: #998f8f;
		font-family: "Poppins", "Poppins Placeholder", sans-serif;
	}

	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	.nav {
		width: 100%;
	}

	.container {
		flex: 1;
		width: 100%;
		max-width: 75rem;
		margin: 0 auto;
		padding: 2rem 1rem;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	@media (min-width: 640px) {
		.container {
			padding: 2rem 1.5rem;
		}
	}

	@media (min-width: 1080px) {
		.container {
			flex-direction: row;
			align-items: flex-start;
			gap: 3rem;
		}

		.hero-sidebar {
			width: 17.5rem;
			flex-shrink: 0;
		}
	}

	main {
		flex: 1;
		width: 100%;
		min-width: 0;
	}

	footer {
		width: 100%;
	}
</style>
