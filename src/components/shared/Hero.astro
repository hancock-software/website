---
import site from "../../data/site.yml";
---

<div class="hero-card">
    <div class="hero-image">
        <img src="/hero.jpg" alt={site.company} />
    </div>

    <h1>{site.company}</h1>

    <div class="hero-icon">
        <i class="lni lni-code"></i>
    </div>

    <p class="hero-tagline">
        {site.description}
    </p>

    <div class="hero-socials">
        {
            site.socials?.map((social: any) => (
                <a href={social.url} target="_blank" rel="noopener noreferrer">
                    <i class={`lni lni-${social.icon}`} />
                </a>
            ))
        }
    </div>
</div>

<style>
    .hero-card {
        background: rgba(255, 255, 255, 0.03);
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        position: sticky;
        top: 2rem;
    }

    .hero-image {
        width: 160px;
        height: 160px;
        margin: 0 auto 1.5rem;
        border-radius: 1rem;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.1);
    }

    .hero-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    h1 {
        font-size: 1.5rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.9);
        margin: 0 0 1rem;
    }

    .hero-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255, 120, 60, 0.15);
        border-radius: 50%;
        margin-bottom: 1rem;
    }

    .hero-icon i {
        font-size: 1.2rem;
        color: rgba(255, 120, 60, 0.9);
    }

    .hero-tagline {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
        line-height: 1.5;
        margin: 0 0 1.5rem;
    }

    .hero-socials {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
    }

    .hero-socials a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
        transition: all 0.2s;
    }

    .hero-socials a:hover {
        background: rgba(255, 255, 255, 0.1);
        color: rgba(255, 255, 255, 0.9);
    }

    .hero-socials i {
        font-size: 1.1rem;
    }
</style>
