---
import site from "../../data/site.yml";
---

<div class="card">
    <!-- Replace with logo -->
    <h1>{site.title}</h1>

    <div class="icon">
        <i class="lni lni-code-1"></i>
    </div>

    <p class="tagline">
        {site.description}
    </p>

    <div class="socials">
        {
            site.socials?.map((social: any) => (
                <a href={social.href} target="_blank" rel="noopener noreferrer">
                    <i class={`lni lni-${social.id}`} />
                </a>
            ))
        }
    </div>
</div>

<style>
    .card {
        background: white;
        border-radius: 1rem;
        padding: 2rem;
        text-align: center;
        position: sticky;
        top: 2rem;
        color: rgba(0, 0, 0, 0.8);
    }

    .image {
        width: 100%;
        height: 10rem;
        max-width: 10rem;
        margin: 0 auto 1.5rem;
        border-radius: 1rem;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.1);
    }

    .image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    h1 {
        font-size: 2.5rem;
        font-weight: 600;
        color: rgba(0, 0, 0, 0.9);
        margin: 0 0 1rem;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    .icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
        background: rgba(255, 120, 60, 0.15);
        border-radius: 50%;
        margin-bottom: 1rem;
    }

    .icon i {
        font-size: 1.2rem;
        color: rgba(255, 120, 60, 0.9);
    }

    .tagline {
        font-size: 1.1rem;
        line-height: 1.5;
        margin: 0 0 1.5rem;
        font-weight: 500;
    }

    .socials {
        display: flex;
        gap: 0.75rem;
        justify-content: center;
    }

    .socials a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.25rem;
        height: 2.25rem;
        border-radius: 8px;
        background: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
        transition: all 0.2s;
    }

    .socials a:hover {
        background: rgba(255, 255, 255, 0.1);
        color: rgba(255, 120, 60, 0.9);
    }

    .socials i {
        font-size: 1.1rem;
    }
</style>
