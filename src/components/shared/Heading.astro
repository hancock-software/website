---
const { title, subtitle } = Astro.props as {
    title: string;
    subtitle?: string;
};
---

<div class="heading">
    <p>{title}</p>
    {subtitle && <span>{subtitle}</span>}
</div>

<style>
    .heading {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1rem;
        line-height: 1.2;
        padding-bottom: 1rem;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    @media (min-width: 375px) {
        .heading {
            font-size: 2.5rem;
            padding-bottom: 2rem;
            margin-bottom: 2rem;
        }
    }

    @media (min-width: 810px) {
        .heading {
            font-size: 4rem;
        }
    }

    @media (min-width: 1080px) {
        .heading {
            font-size: 4.5rem;
            text-align: left;
        }
    }

    @media (min-width: 1440px) {
        .heading {
            font-size: 5rem;
        }
    }

    .heading p {
        color: rgba(255, 255, 255, 0.9);
        margin: 0;
    }
    .heading span {
        color: rgba(255, 255, 255, 0.2);
    }
</style>
