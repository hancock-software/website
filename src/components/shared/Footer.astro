---
import Links from "./Links.astro";

type Link = {
    label: string;
    href: string;
    rel?: string;
    target?: "_blank" | "_self" | "_parent" | "_top";
};

export type Props = {
    company: string;
    companyNumber: string;
    vatNumber: string;
    location: string[];
    email: string;
    legal: Link[];
    socials: Link[];
    disclaimer: string;
};

const {
    company,
    companyNumber,
    vatNumber,
    location = [],
    email,
    legal = [],
    socials = [],
    disclaimer,
} = Astro.props as Props;
---

<div class="footer">
    <div class="footer-content">
        <div class="footer-grid">
            {
                (location.length > 0 || email) && (
                    <div class="footer-section">
                        <h4>Contact</h4>
                        {location.length > 0 && (
                            <address>
                                {location.map((line) => (
                                    <span>
                                        {line}
                                        <br />
                                    </span>
                                ))}
                            </address>
                        )}
                        {email && (
                            <p>
                                <a href={`mailto:${email}`}>{email}</a>
                            </p>
                        )}
                    </div>
                )
            }

            {
                legal.length > 0 && (
                    <div class="footer-section">
                        <h4>Company</h4>
                        <ul>
                            {legal.map((link) => (
                                <li>
                                    <a href={link.href}>{link.label}</a>
                                </li>
                            ))}
                        </ul>
                    </div>
                )
            }
        </div>

        {
            disclaimer && (
                <div class="disclaimer">
                    <p>{disclaimer}</p>
                </div>
            )
        }

        <div class="footer-bottom">
            <p class="copyright">
                © {new Date().getFullYear()}
                {company}. All rights reserved.
            </p>
            <p class="company-details">
                {companyNumber && <span>Company No: {companyNumber}</span>}
                {companyNumber && vatNumber && <span> · </span>}
                {vatNumber && <span>VAT No: {vatNumber}</span>}
            </p>
        </div>
    </div>
</div>

<style>
    .footer {
        width: 100%;
        background: rgba(0, 0, 0, 0.3);
        border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .footer-content {
        max-width: 75rem;
        margin: 0 auto;
        padding: 3rem 1rem 2rem;
        box-sizing: border-box;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2.5rem;
        margin-bottom: 2.5rem;
        text-align: center;
    }

    @media (min-width: 40rem) {
        .footer-content {
            padding: 3rem 1.5rem 2rem;
        }
    }

    @media (min-width: 48rem) {
        .footer-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 4rem;
            text-align: left;
        }

        .footer-section:last-child {
            text-align: right;
        }
    }

    /* Footer Sections */
    .footer-section h4 {
        margin: 0 0 1rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: rgba(255, 255, 255, 0.9);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .footer-section address {
        font-style: normal;
        margin: 0 0 0.75rem;
        font-size: 0.875rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.6);
    }

    .footer-section p {
        margin: 0;
        font-size: 0.875rem;
    }

    .footer-section a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        transition: color 0.2s;
    }

    .footer-section a:hover {
        color: rgba(255, 255, 255, 0.9);
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-section li {
        margin-bottom: 0.625rem;
    }

    /* Disclaimer */
    .disclaimer {
        padding: 1.5rem 0;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }

    .disclaimer p {
        margin: 0;
        font-size: 0.75rem;
        line-height: 1.6;
        color: rgba(255, 255, 255, 0.5);
    }

    /* Footer Bottom */
    .footer-bottom {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-top: 0.5rem;
    }

    @media (min-width: 48rem) {
        .footer-bottom {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
    }

    .copyright {
        margin: 0;
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.7);
    }

    .company-details {
        margin: 0;
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.5);
    }
</style>
