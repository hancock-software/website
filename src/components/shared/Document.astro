---
import Heading from "../shared/Heading.astro";

const { title, updated } = Astro.props as {
    title: string;
    updated?: string;
};
---

<div class="page">
    <Heading title={title} />
    <article class="content">
        <slot />
    </article>
    {
        updated && (
            <p class="updated">
                Last updated: {new Date(updated).toLocaleDateString()}
            </p>
        )
    }
</div>

<style>
    .page {
        max-width: 46.875rem;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .content {
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.7;
    }

    .content :global(h2) {
        color: rgba(255, 255, 255, 0.95);
        font-size: 1.5rem;
        margin: 2rem 0 1rem;
        font-weight: 600;
    }

    .content :global(p) {
        margin: 1rem 0;
        font-size: 0.95rem;
    }

    .content :global(strong) {
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
    }

    .content :global(a) {
        color: rgba(255, 120, 60, 0.9);
        text-decoration: none;
    }

    .content :global(a:hover) {
        text-decoration: underline;
    }

    .updated {
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.5);
    }
</style>
